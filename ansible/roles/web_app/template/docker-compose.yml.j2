version: "3.4"

services:

  {{ web_app.name }}:
    image: {{ web_app.registry }}/{{ web_app.image }}:{{ web_app.tag }}
    ports:
      - "{{ web_app_net.external_port }}:{{ web_app_net.port }}"
    restart: always
    healthcheck:
      test: wget --no-verbose --tries=1 --spider http://localhost:5000 || exit 1
      interval: 60s
      retries: 5
      start_period: 20s
      timeout: 10s

